<h1 class="text-center page-header">All Users</h1>

<table class="table table-stripped">
  <thead>
    <tr>
      <th>Name</th>
      <th >Email</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        
        <%if friends_with(user) or session[:user]==user.id %>
          <td><%= link_to 'Show', user %></td>
        <% else %>
          <td><%= link_to "Friend request", my_friends_path(:user2 => user.id),:method => :post,data: { confirm: 'Do you really want to make a friend request to this user?' } %></td>
        <% end %>
        <% if user.id == session[:user] %>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <!--AÃ‘ADIR CONDICION DE SER ADMIN PARA HACER ESTO-->
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
        <td></td>
        <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

