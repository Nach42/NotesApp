<header>
  <nav class="navbar navbar-inverse">
      <div class="navbar-header">
        <%= link_to "NotesApp", welcome_path, class: "navbar-brand" %>
      
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"> 
            <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> 
          </button>  
      </div>
        <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <% if session[:user] %>
            <li class="<%= active_class(user_notes_path(session[:user])) %>"><%= link_to "My Notes", user_notes_path(session[:user]) %></li>
            <li class="<%= active_class(user_collections_path(session[:user])) %>"><%= link_to "My Collections", user_collections_path(session[:user]) %></li>
            <li class="<%= active_class(my_friends_path) %>"><%= link_to "My Friends", my_friends_path %></li>
            <li class="<%= active_class(users_path) %>"><%= link_to "Users", users_path %></li>
          </ul>
              <ul class="nav navbar-nav navbar-right">
                 <% if session[:user] %>
                    <li class="<%= active_class(user_path(session[:user])) %>"><%= link_to session[:user_name], user_path(session[:user]) %></li>
                    <li><%= link_to "Logout", logout_path %></li>
                  <% else %>
                    <li><%= link_to "Sign up", signup_path %> or </li>
                    <li><%= link_to "log in", login_path %>. </li>
                  <% end %>   
              </ul>
            </div>
            </nav>
          <% end %>
        </ul>
  </nav>
</header>