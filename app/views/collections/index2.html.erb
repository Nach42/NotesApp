
<div class="text-center page-header"><h1>All Collections </h1></div>

<%  @user = User.find(session[:user])
    if @user.permission_level>=2 %>
    <table class="table table-stripped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody> 
      <% @collections.each do |collection| %>
      <tr>
        <td><%= collection.name %></td>
        <td><%= collection.user.name %></td>
          <td><%=link_to 'Show', user_collection_path(collection.user, collection) %></td>
          <td><%= link_to 'Edit', edit_user_collection_path(collection.user, collection) %></td>
          <td><%= link_to 'Destroy', user_collection_path(collection.user, collection), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
<% else %>
  <p>You don't have permission to view this content</p>
<% end %>