<% if @user.id == session[:user] %>
  <div class="text-center"><h1>My Notes</h1></div>
<% else %>
  <div class="text-center"><h1>Notes by <%= @user.name %></h1></div>
<% end %>

<div>
  <% if @user.id == session[:user] %>
  <div class="text-center"><%= link_to "New Note", new_user_note_path,class:"btn btn-success" %></div>
<% end %>
  <div class="row large-padding">
    <% @notes.each do |note| %>        
        <div><strong><%= note.title %></strong></div>
        
        <div><%= note.body %></div>
        
        <div>Written by <%= note.user.name %> <%= time_ago_in_words(note.updated_at) %> ago </td> </div>
        
        <div><%= link_to 'Show', user_note_path(note.user, note),class:"btn btn-primary" %></td>
        <% if @user.id == session[:user] %>
          <%= link_to 'Edit', edit_user_note_path(note.user, note),class:"btn btn-warning" %></td>
          <%= link_to 'Destroy', user_note_path(note.user, note), class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
    <% end %>
  </div>

</div>

<br>