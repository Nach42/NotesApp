<div class="page-header">
  <div class="text-center"><h1>All Notes</h1></div>
</div>
<%  @user = User.find(session[:user])
      if @user.permission_level>=2 %>
<table class="table table-stripped">
  <thead>
    <tr>
      <th>Title</th>
      <th >Body</th>
      <th>Author</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>  
    <% @notes.each do |note| %>  
    <tr>      
      <td><%= note.title %></td>
      <td><%= note.body %></td>
      <td><%= note.user.name %></td>
        <td><%= link_to 'Show', user_note_path(note.user, note) %></td>
        <td><%= link_to 'Edit', edit_user_note_path(note.user, note) %></td>
        <td><%= link_to 'Destroy', user_note_path(note.user, note), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p>You don't have permission to view this content</p>
<% end %>
<br>